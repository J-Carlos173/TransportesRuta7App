<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ValeActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/fondo2"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="20dp"
                        android:gravity="left|center_vertical"
                        android:text="Chofer :" />

                    <TextView
                        android:id="@+id/choferTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_weight="1"
                        android:gravity="left|center_vertical"
                        android:text="Juan Andres Antuco" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="right"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/fechaTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="20dp"
                        android:gravity="left|center_vertical"
                        android:text="22/03/2022" />


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textMovil"
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:layout_marginStart="20dp"

                        android:layout_weight="1"
                        android:gravity="left|center_vertical"
                        android:text="Movil :" />

                    <TextView
                        android:id="@+id/movilTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="20dp"
                        android:gravity="left|center_vertical"
                        android:text="3" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textPatente2"
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:layout_marginStart="20dp"
                        android:gravity="left|center_vertical"
                        android:text="Patente: " />

                    <TextView
                        android:id="@+id/patenteTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="20dp"
                        android:gravity="left|center_vertical"
                        android:text="XXXXXX" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:gravity="left|center_vertical"
                    android:text="Empresa" />

                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/spnEmpresas"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/spinner_bg"
                    android:clipToPadding="false"
                    android:popupBackground="@color/naranjo_obscuro"
                    android:spinnerMode="dropdown" />
            </LinearLayout>


            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:gravity="left|center_vertical"
                android:text="Centro de costo" />


            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/spnCentroCosto"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/spinner_bg"
                android:clipToPadding="false"
                android:popupBackground="@color/naranjo_obscuro"
                android:spinnerMode="dropdown" />


            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:text="Direcciones" />

            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/spnDireccionInicio"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/spinner_bg"
                android:clipToPadding="false"
                android:popupBackground="@color/naranjo_obscuro"
                android:spinnerMode="dropdown" />

            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/spnDireccionFin"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/spinner_bg"
                android:clipToPadding="false"
                android:popupBackground="@color/naranjo_obscuro"
                android:spinnerMode="dropdown" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:text="Nombre Pasajero" />


            <EditText
                android:id="@+id/pasajeroEditText"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="5dp"
                android:clipToPadding="false"
                android:popupBackground="@color/naranjo_obscuro"
                android:spinnerMode="dropdown"
                android:background="@drawable/spinner_bg" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:text="RUT Pasajero" />

            <EditText
                android:id="@+id/rutText"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="5dp"
                android:clipToPadding="false"
                android:popupBackground="@color/naranjo_obscuro"
                android:spinnerMode="dropdown"
                android:background="@drawable/spinner_bg" />


            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                app:srcCompat="@drawable/firma"
                tools:srcCompat="@tools:sample/avatars" />

            <Button
                android:id="@+id/crearValeButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:text="Crear Vale" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>