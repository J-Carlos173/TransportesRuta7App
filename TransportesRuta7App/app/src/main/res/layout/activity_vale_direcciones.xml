                            android:layout_height="wrap_content"
                            android:paddingLeft="15dp"
                            android:paddingTop="15dp"
                            android:text="Centro de costo"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <androidx.appcompat.widget.AppCompatSpinner
                            android:id="@+id/spnCentroCostoValeDirecciones"
                            android:layout_width="120dp"
                            android:layout_height="35dp"
                            android:layout_margin="5dp"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="20dp"
                            android:background="@drawable/spinner_bg"
                            android:clipToPadding="false"
                            android:popupBackground="@color/naranjo_obscuro"
                            android:spinnerMode="dropdown" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:orientation="horizontal"
                        android:paddingVertical="10dp">

                        <TextView
                            android:id="@+id/empresa"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:paddingLeft="15dp"
                            android:paddingTop="15dp"
                            android:text="Emresa"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <androidx.appcompat.widget.AppCompatSpinner
                            android:id="@+id/spnEmpresaValeDirecciones"
                            android:layout_width="120dp"
                            android:layout_height="35dp"
                            android:layout_margin="5dp"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="20dp"
                            android:background="@drawable/spinner_bg"
                            android:clipToPadding="false"
                            android:popupBackground="@color/naranjo_obscuro"
                            android:spinnerMode="dropdown" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:orientation="horizontal"
                        android:paddingVertical="10dp">

                        <TextView
                            android:id="@+id/pasajeros"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="15dp"
                            android:paddingRight="25dp"
                            android:text="Pasajéros"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <Button
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:background="@color/naranjo_obscuro"
                            android:text="+"
                            android:textColor="@color/black"></Button>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/pasajeros2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="15dp"
                            android:paddingTop="15dp"
                            android:paddingRight="25dp"
                            android:text="No hay pasajeros registrados"
                            android:textSize="15sp"
                            android:textStyle="bold" />


                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <!-- Content here -->
        </LinearLayout>
    </ScrollView>
</LinearLayout>


