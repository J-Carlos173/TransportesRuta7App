<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerVertical="false"
    android:background="@drawable/fondo2"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".ValesActivity">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

                <TextView
                    android:id="@+id/MesTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginEnd="5dp"
                    android:fontFamily="@font/abel"
                    android:text="Mes"
                    android:textColor="@color/title_text"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/spnMes"
                    android:layout_width="120dp"
                    android:layout_height="35dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/spinner_bg"
                    android:clipToPadding="false"
                    android:popupBackground="@color/naranjo_obscuro"
                    android:spinnerMode="dropdown" />

                <TextView
                    android:id="@+id/AnoTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:fontFamily="@font/abel"
                    android:text="AÃ±o"
                    android:textColor="@color/title_text"
                    android:textSize="30sp"
                    android:textStyle="bold" />
                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/spnAno"
                    android:layout_width="120dp"
                    android:layout_height="35dp"
                    android:background="@drawable/spinner_bg"
                    android:clipToPadding="false"
                    android:popupBackground="@color/naranjo_obscuro"
                    android:spinnerMode="dropdown" />
        </LinearLayout>

        <Button
            android:id="@+id/exportarButton"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_marginTop="50dp"
            android:text="Exportar Vales" />


</LinearLayout>
