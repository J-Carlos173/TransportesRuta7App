<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".RegisterActivity"
    android:orientation="vertical"
    android:gravity="center_vertical"
    android:padding="25dp"
    android:background="@drawable/fondo3">
    <TextView
        android:id="@+id/bienvenidoTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/abel"
        android:text="Bienvenido"
        android:layout_marginTop="28dp"
        android:textSize="40sp"
        android:textStyle="bold"
        android:transitionName="bienvenidoTextTrans"/>

    <TextView
        android:id="@+id/continuarTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registrate para comenzar a Conducir"
        android:textSize="24sp"
        android:fontFamily="@font/abel"
        android:transitionName="RegistrateTextTrans"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:orientation="vertical">
        <EditText
            android:id="@+id/nombreText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/edt_background"
            android:drawableTint="@color/gray_icons"
            android:drawableLeft="@drawable/ic_user"
            android:drawablePadding="16dp"
            android:hint="Nombre"
            android:fontFamily="@font/abel"
            android:padding="16dp"
            android:textColor="@color/black"
            android:textColorHint="@color/gray" />

        <EditText
            android:id="@+id/apellidoText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/edt_background"
            android:drawableTint="@color/gray_icons"
            android:drawableLeft="@drawable/ic_user"
            android:drawablePadding="16dp"
            android:hint="Apellido"
            android:fontFamily="@font/abel"
            android:padding="16dp"
            android:textColor="@color/black"
            android:textColorHint="@color/gray" />

        <EditText
            android:id="@+id/rutText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/edt_background"
            android:drawableTint="@color/gray_icons"
            android:drawableLeft="@drawable/rut"
            android:drawablePadding="16dp"
            android:hint="RUT"
            android:fontFamily="@font/abel"
            android:padding="16dp"
            android:textColor="@color/black"
            android:textColorHint="@color/gray" />

        <EditText
            android:id="@+id/telefonoText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/edt_background"
            android:drawableTint="@color/gray_icons"
            android:drawableLeft="@drawable/ic_call_phone"
            android:drawablePadding="16dp"
            android:hint="Teléfono"
            android:fontFamily="@font/abel"
            android:padding="16dp"
            android:textColor="@color/black"
            android:textColorHint="@color/gray" />

        <EditText
            android:id="@+id/datoText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/edt_background"
            android:drawableTint="@color/gray_icons"
            android:drawableLeft="@drawable/ic_email"
            android:drawablePadding="16dp"
            android:hint="Email"
            android:fontFamily="@font/abel"
            android:inputType="textEmailAddress"
            android:padding="16dp"
            android:textColor="@color/black"
            android:textColorHint="@color/gray" />

        <EditText
            android:id="@+id/contraseñaText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edt_background"
            android:drawableTint="@color/gray_icons"
            android:drawableLeft="@drawable/ic_lock"
            android:drawablePadding="16dp"
            android:hint="Contraseña"
            app:passwordToggleEnabled="true"
            android:fontFamily="@font/abel"
            android:inputType="textPassword"
            android:padding="16dp"
            android:textColor="@color/black"
            android:textColorHint="@color/gray"/>
    </LinearLayout>
    <androidx.appcompat.widget.AppCompatButton
        android:layout_marginTop="30dp"
        android:id="@+id/registrarButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        style="@style/Button.Orange"
        android:text="REGISTRAR"/>
</LinearLayout>