<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/fondo2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="15dp"
        android:animateLayoutChanges="false"
        app:cardElevation="10dp"
        app:cardMaxElevation="10dp"
        app:cardUseCompatPadding="false"
        app:cardCornerRadius="20dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/orange">


            <TextView
                android:id="@+id/emailTextView"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text="TextView"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="71dp"
                android:layout_height="80dp"
                android:padding="10dp"
                tools:srcCompat="@drawable/account"
                android:background="@color/gray"

                />

            <TextView
                android:id="@+id/nombreText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="15dp"
                android:paddingLeft="15dp"
                android:text="Isaias Andrew"
                android:textSize="20sp"
                android:textColor="#EE373333"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/cerrarButton"
                android:layout_width="162dp"
                android:layout_height="32dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="12dp"
                android:layout_marginRight="16dp"
                android:contentDescription="@string/all"
                app:srcCompat="@drawable/ic_sign_out"
                tools:ignore="VectorDrawableCompat" />


        </LinearLayout>

    </androidx.cardview.widget.CardView>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:layout_centerInParent="true"
        android:layout_margin="15dp"
        android:animateLayoutChanges="false"
        app:cardCornerRadius="4dp"
        app:cardElevation="10dp"
        app:cardMaxElevation="10dp"
        app:cardUseCompatPadding="false">

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/main_slider2"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="vertical"
        android:paddingHorizontal="140dp"
        android:weightSum="2">


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/CrearvaleEmpresaButton"
            android:layout_width="142dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="Nuevo Vale Empresa"
            android:background="@drawable/ic_field"
            android:backgroundTint="#FB4F18"
            />

        <Button
            android:id="@+id/CrearvaleButton"
            android:layout_width="142dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/ic_field"
            android:backgroundTint="#FB4F18"
            android:text="Nuevo Vale"/>




    </LinearLayout>
</LinearLayout>