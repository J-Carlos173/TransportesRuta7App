<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".LoginActivity"
    android:padding="25dp"
    android:layout_gravity="center_vertical"
    android:orientation="vertical"
    android:id="@+id/authLayout">

    <ImageView
        android:id="@+id/loginImageView"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:src="@drawable/logo_launcher"
        android:transitionName="logoImageTrans"
        android:layout_gravity="center"
        android:contentDescription="Logo" />
    <TextView
        android:id="@+id/bienvenidoLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/abel"
        android:textColor="@color/title_text"
        android:text="Bienvenido"
        android:layout_marginTop="10dp"
        android:textSize="40sp"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/continuarLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Inicia sesi칩n para continuar"
        android:textColor="@color/primary_text"
        android:textSize="24sp"
        android:fontFamily="@font/abel"
        android:transitionName="iniciaSesionTextTrans"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="14dp"
        android:padding="15dp"
        android:orientation="vertical">
        <EditText
            android:id="@+id/datoText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:background="@drawable/edt_background"
            android:drawableTint="@color/gray_icons"
            android:drawableLeft="@drawable/ic_email"
            android:drawablePadding="16dp"
            android:hint="Email"
            android:fontFamily="@font/abel"
            android:inputType="textEmailAddress"
            android:padding="16dp"
            android:textColor="@color/black"
            android:textColorHint="@color/gray" />

        <EditText
            android:id="@+id/contrase침aText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edt_background"
            android:drawableTint="@color/gray_icons"
            android:drawableLeft="@drawable/ic_lock"
            android:drawablePadding="16dp"
            android:hint="Contrase침a"
            app:passwordToggleEnabled="true"
            android:fontFamily="@font/abel"
            android:inputType="textPassword"
            android:padding="16dp"
            android:textColor="@color/black"
            android:textColorHint="@color/gray"
            android:layout_marginBottom="20dp"/>

        <TextView
            android:id="@+id/recoveryAccountTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/gray_text"
            android:fontFamily="@font/abel"
            android:layout_gravity="end"
            android:clickable="true"
            android:focusable="true"
            android:text="Olvidaste tu contrase침a?"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/singUpButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            style="@style/Button.Orange"
            android:text="INGRESAR"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="50dp"/>
    </LinearLayout>
    <TextView
        android:id="@+id/registerButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="20dp"
        android:fontFamily="@font/abel"
        android:layout_margin="10dp"
        android:textColor="@color/gray_text"
        android:layout_gravity="center_vertical|center_horizontal"
        android:clickable="true"
        android:focusable="true"
        android:textStyle="bold"
        android:text="Eres nuevo? Registrate"/>
</LinearLayout>